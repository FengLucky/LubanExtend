<?xml version="1.0"?>
<module
        xmlns="bean"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="bean ~bean.xsd"
        name="">
    <bean name="CameraInstanceBean" comment="相机单例配置">
        <var name="minViewport" type="float#range[1,]" comment="横向最少展示格子"/>
        <var name="maxViewport" type="float#range[1,]" comment="横向最多展示格子"/>
        <var name="defaultViewport" type="float#range[1,]" comment="横向默认展示格子"/>
        <var name="tweenSpeed" type="float#range[0.1,]" comment="移动速度(格子/s)"/>
    </bean>
    <bean name="GameConfigBean" comment="全局配置">
        <var name="hiddenPos" type="CfgVector3" comment="池化对象隐藏位置"/>
        <var name="moveDirection" type="(list#sep=|),CfgVector2Int" comment="移动方向"/>
        <var name="initHero" type="list,int#ref=HeroTable" comment="初始英雄"/>
        <var name="killHeroMemberExpRate" type="float" comment="击杀英雄后，剩余小兵获取经验效率"/>
        <var name="cantMoveRangeColor" type="CfgColor" comment="移动时不可移动位置颜色"/>
        <var name="actorMapMoveTweenSpeed" type="float#range[0.1]" comment="角色地图移动速度(格子/s)"/>
    </bean>
</module>